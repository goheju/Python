#crear una tupla con las asignaturas del usuario, que te pregunte cuantas asignaturas vas ha a√±adir.
def escribir():
    matriz= crear () 
    print (matriz)

    for x in range(0,usuarios):
        print (x)
        a = input ("Dame el nombre ")
        matriz[x][0] = a
        b = input ("Dame la ip ")
        matriz[x][1] = b
        c = input ("Dame el correo ")
        matriz[x][2] = c
        dominio = c.split("@")
        print (dominio)
        Tdominio = dominio[1] 
        matriz[x].insert (3,Tdominio)
        dni = input ("Dame el DNI ")
        letra = dni[8]
        numeros = dni[0:7]
        matriz[x].insert (4,numeros)
        matriz[x].insert (5,letra)
        tuplas = int(input ("Cuantas asignaturas? "))
        matriz[x].insert (6,tuplas)
        tupla = ("")
        for y in range(0,tuplas):
            topla = list(tupla)
            asignatura = input ("Nombre de la asignatura ")
            nota = input ("Nota de la asignatura ")
            topla.append(asignatura)
            topla.append(nota)
            tupla = tuple(topla)
        matriz[x].append(tupla)
        y += 1
    x += 1
    return matriz


def imprimir():
    matriz= escribir ()
    for x in range(0,usuarios):
        a = matriz[x][0]
        b = matriz[x][1]
        c = matriz[x][2]
        d = matriz[x][3]
        e = matriz[x][4]
        f = matriz[x][5]
        print ("El nombre es",a,"La IP es",b,"El correo es",c,"El dominio es",d,"El DNI es",e,f)
    x += 1 
    return matriz
    
def indexar():
	matriz= imprimir ()
	print (matriz)
	diccionario = {}
	for x in range (0,usuarios):
		diccionario.update({
			"nombre" : matriz[x][0],
			"ip" : matriz[x][1],
			"correo" : matriz[x][2],
			"dominio" : matriz[x][3],
			"dni" : {
			"ndni" : matriz[x][4],
			"ldni" : matriz[x][5],
			},
			"nas" : matriz[x][6],
			"asignaturas" : matriz[x][7],
		})

	return diccionario

def guardar():
	diccionario = indexar ()
	nas = diccionario["nas"]
	archivo = open("save.txt", "w")
	nombre = diccionario["nombre"]
	archivo.write("El nombre es: ")
	archivo.write(nombre)
	ip = diccionario["ip"]
	archivo.write(" La ip es: ")
	archivo.write(ip)
	correo = diccionario["correo"]
	archivo.write(" El correo es: ")
	archivo.write(correo)
	archivo.write(" El numero de dni es: ")
	ndni = diccionario["dni"]["ndni"]
	archivo.write(ndni)
	archivo.write("  La letra del dni es : ")
	ldni = diccionario["dni"]["ldni"]
	archivo.write(ldni)
	asignaturas = diccionario["asignaturas"]
	archivo.write(" Las asignaturas son :")
	Lasignaturas = list(asignaturas)
	x = 0
	while x <= nas:
		y = x + 1
		asignatura = Lasignaturas[x]
		nota = Lasignaturas[y]
		archivo.write("  Asignatura : ")
		archivo.write(asignatura)
		archivo.write("  Nota : ")
		archivo.write(nota)
		if x != nas:
			archivo.write(",")
		x += 2
	archivo.close

